            "command": [
                "python3",
                "${workspaceFolder}/tools/rp6502.py",
                "-c",
                "${workspaceFolder}/.rp6502",
                "term"
            ],
            "presentation": {
                "panel": "dedicated",
                "reveal": "always"
            },
            "problemMatcher": []
        },
    ]
}
